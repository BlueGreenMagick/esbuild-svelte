{
  "name": "esbuild-svelte",
  "version": "0.5.1",
  "description": "esbuild plugin to resolve .svelte files",
  "repository": "https://github.com/EMH333/esbuild-svelte",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublishOnly": "git push origin --follow-tags",
    "postversion": "npm publish",
    "preversion": "npm run build && npm test",
    "pretest": "tsc -p tsconfig.json --noEmit",
    "test": "node test/simpleTest.js && node test/cacheTest.mjs",
    "build": "node build.js"
  },
  "keywords": [
    "svelte",
    "esbuild",
    "plugin"
  ],
  "author": {
    "name": "Ethan Hampton",
    "url": "https://www.ethohampton.com"
  },
  "license": "MIT",
  "dependencies": {
    "svelte": "^3.38.3"
  },
  "peerDependencies": {
    "esbuild": ">=0.9.6"
  },
  "devDependencies": {
    "@types/node": "^14.17.4",
    "esbuild": "^0.12.10",
    "rewrite-imports": "^3.0.0",
    "typescript": "^4.3.4",
    "uvu": "^0.5.1"
  }
}
